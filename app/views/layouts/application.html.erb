<!DOCTYPE html>
<html>
<head>
  <title>PAL</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

<!-- Bootstrap Latest compiled and minified CSS and JS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">

<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
<script src="http://cdnjs.cloudflare.com/ajax/libs/masonry/3.3.0/masonry.pkgd.js"></script>
<script src="http://imagesloaded.desandro.com/imagesloaded.pkgd.js"></script>

<link href='http://fonts.googleapis.com/css?family=Open+Sans+Condensed:300' rel='stylesheet' type='text/css'>
<link rel="shortcut icon" href="/assets/faviconPL.ico" type="image/x-icon" />
<link href='http://fonts.googleapis.com/css?family=Megrim' rel='stylesheet' type='text/css'>

</head>
<body>

<!-- <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1"> -->
<nav class="navbar navbar-default">
    <!-- Brand and toggle get grouped for better mobile display -->

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li><a href="/">home</a></li>
        <li><a href="/music">music</a></li>
        <li><a href="/about">about</a></li>
        <% if user_signed_in? %>
          <li><a href="/test">test</a></li>
          <li><a href="/public">public</a></li>
          <li> <%= link_to 'upload', new_post_path %></li>
        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <!-- end -->
        <% if user_signed_in? %>
          <li>
          <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
          </li>
        <% else %>
          <li>
          <%= link_to('Login', new_user_session_path)  %>
          </li>
        <% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
</nav>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<!-- Yield the rest of the application -->
<%= yield %>


<script>

// This works pretty flawlessly
var $grid = $('.grid').masonry({
  // options
  itemSelector: '.grid-item',
  columnWidth: 330
});

$grid.imagesLoaded().progress( function() {
  $grid.masonry('layout');
});
// End of flawless work

</script>
</body>
</html>
